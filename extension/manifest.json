{
	"name": "Do not redirect me",
	"description": "This extension prevents you from being redirected by google to your country specific domain.",
	"version": "1.1",

	"manifest_version": 2,

	"background": {
		"scripts": ["jquery-1.9.1.min.js", "background.js"],
		"persistent": true
	},

	"browser_action": {
		"default_icon": {
			"19": "/assets/icon_19_gray.png",
			"38": "/assets/icon_38_gray.png"
		},
		"default_popup": "popup.html",
		"default_title": "Show redirections and requests details"
	},

	"icons": {
		"16": "/assets/icon_16_red.png",
		"48": "/assets/icon_48_red.png",
		"128": "/assets/icon_128_red.png",
		"256": "/assets/icon_256_red.png"
	},

	"permissions": [
		"webRequest",
		"webRequestBlocking",
        "webNavigation",
		"tabs",
		"chrome://favicon/",
		"contextMenus",
		"storage",
		"unlimitedStorage",
		"cookies",
        "pageCapture",
        "history",
        "browsingData",
		"*://doreme.sorgoz.com/*",
		"*://api.mywot.com/*",

		"http://*/*",
		"https://*/*"
	]
}
